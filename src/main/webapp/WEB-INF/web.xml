<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    <servlet>
        <servlet-name>Home Servlet</servlet-name>
        <servlet-class>com.mikhalchuk.mp.web.HomeServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Home Servlet</servlet-name>
        <url-pattern></url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>News Servlet</servlet-name>
        <servlet-class>com.mikhalchuk.mp.web.NewsServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>News Servlet</servlet-name>
        <url-pattern>/news</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Add News Servlet</servlet-name>
        <servlet-class>com.mikhalchuk.mp.web.AddNewsServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Add News Servlet</servlet-name>
        <url-pattern>/addnews</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Add Comment Servlet</servlet-name>
        <servlet-class>com.mikhalchuk.mp.web.AddCommentServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Add Comment Servlet</servlet-name>
        <url-pattern>/addcomment</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Report Servlet</servlet-name>
        <servlet-class>com.mikhalchuk.mp.web.ReportServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Report Servlet</servlet-name>
        <url-pattern>/reports</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Add Reports Servlet</servlet-name>
        <servlet-class>com.mikhalchuk.mp.web.AddReportServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Add Reports Servlet</servlet-name>
        <url-pattern>/addreports</url-pattern>
    </servlet-mapping>


</web-app>